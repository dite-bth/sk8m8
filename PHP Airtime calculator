		$inAir = false;
		$airTime = 0;
		for ($i = 0; $i < count($testArray); $i++) { 
			if (intval($testArray[$i]) > 70 && intval($testArray[$i]) < 76) {
				if ($inAir) {
					$inAir = false;
					break;
				}
			}
			else if (intval($testArray[$i]) < 70 || intval($testArray[$i]) > 76) {
				$inAir = true;
				$airTime++;
			}
		}
		$result = $airTime / 20;
		
	?>

$(document).ready(function () {

	$('#BUTTON-ID').click(function(){
	
		$('#ID').text('3');

		$('#ID').text('number');
		setTimeout(function() {
		    $('#ID').text('2');
		}, 1000);

		setTimeout(function() {
		    $('#ID').text('1');
		}, 2000);
    	});
});



<script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
<script src="app.js"></script>
